@using PitAgora.Models;
@model List<PitAgora.ViewModels.PlanningViewModel>
@{
    Layout = "_Layout";

    ViewBag.Title = "Reservation d'un cours";
}

<script>
    const selectionnes = [];
    var statutModifie = false;
    var statut, prof;
</script>

<div style="height:28px">
    <h2 style="float: left">Cours disponibles</h2>
    <div style="float:left; padding:20px; height: inherit">Choisis au moins deux créneaux disponibles consécutifs</div>
    <button onclick="validerChoixCours()" class="boutonChoixCours">Valider</button>
</div>

<br />

@foreach (var item in @Model)
{
    <p>Planning de M @item.NomProf :</p>
    <div class="planningContainer">
        @for (int k = 0; k < Creneau.NB_CRENEAUX_PAR_JOUR; k++)
            @if (item.Dispos[k])
            {
                <div id="@(Model.IndexOf(item)*100+k)" class="cellulePlanning dispo" onclick="changeStatut(this)" onmouseover="mOver(this)" onmouseout="mOut(this)"></div>
            }
            else
            {
                <div class="cellulePlanning nonDispo"></div>
            }
    </div>
    <br />
}
<br />

@section Scripts {
    <script src="~/Scripts/ScriptsChoisirCours.js"></script>
}
