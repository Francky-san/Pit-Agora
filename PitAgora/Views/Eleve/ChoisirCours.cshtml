@using PitAgora.Models;
@model List<PitAgora.ViewModels.PlanningViewModel>
@{
    Layout = "_Layout";

    ViewBag.Title = "Reservation d'un cours";
}


<h2>Cours disponibles</h2>
@foreach (var item in @Model)
{
    <p>Planning de @item.NomProf :</p>
    <div class="planningContainer">
        @for (int k = 0; k < Creneau.NB_CRENEAUX_PAR_JOUR; k++)
            @if (item.Dispos[k])    
            {
                <div class="cellulePlanning nonDispo"></div>
            } 
            else
            {
                <div class="cellulePlanning dispo"></div>
            }
    </div>
    <br />
}
<br />


