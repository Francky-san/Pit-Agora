<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    @RenderSection("Css", required: false)
</head>
<body>
    <div id="entete">
        <h1>Pit'Agora</h1>
    </div>

    <div id="main">
        <div id="menu">
            @RenderSection("Menu", required: false)
        </div>

        <div id="contenu">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        &copy; @DateTime.Now.Year - Le site n°1 de soutien scolaire en matières scientifiques -
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>