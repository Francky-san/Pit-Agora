@model PitAgora.Models.Reservation
@{
    Layout = "LayoutPrive";

    ViewBag.Title = "Créer une évaluation";
}

@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("AccueilProf", "Professeur")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Deconnexion", "Login")>
                Déconnexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("GererPlanning", "Professeur", new {id=ViewData["professeurId"], jour=DateTime.Now.ToString()})>
                Gérer mon planning
            </a>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("ElevesDuProf", "Professeur")>
                Mes élèves
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Contact", "Home")>
                Contact
            </a>
        </li>


    </ul>
}




@section Main
    {
    <form action="~/Professeur/CreerEvaluation" method="post">
        <!-- partie cachée, pour transmettre certaines informations-->
        <input type="hidden" name="professeurId" value=@ViewData["professeurId"] />
        <input type="hidden" name="reservationId" value=@Model.Id />

        <div style="padding:20px; place-items:center; margin-top: 60px">
            <div class="container-fluid" style="background-color: white">
                <h4> Evaluation du cours du @Model.Jour, cours de @Model.Matiere avec @Model.PrenomEleve </h4>
                <br />
                <label for="inputMessage" class="form-label">Entrez le contenu de votre évaluation commune :</label>
                <textarea type="text"
                    name="contenu"         
                    class="form-control"
                    id="inputMessage">
                </textarea>
                <br />

                <button type="submit" class="btn btn-primary" style="margin-top:10px">Envoyer</button>
            </div>
        </div>
    </form>
}



