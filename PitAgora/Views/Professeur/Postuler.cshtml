@model PitAgora.ViewModels.CandidatViewModel

@{
    Layout = "LayoutGen";
}

@section css {
    <link href="~/css/stylesMain.css" rel="stylesheet" />
}



@section Main{

    <form action="~/Home/Postuler" method="post">
        <div class="container-fluid">

            <div class="row col-5 m-5" style="float:left">
                <p>Informations personnelles</p>
                @Html.LabelFor(m => m.Personne.Prenom,
                    new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Utilisateur.Personne.Prenom,
                    new { @class = "form-control" })

                @Html.LabelFor(m => m.Utilisateur.Personne.Nom,
                    new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Utilisateur.Personne.Nom,
                    new { @class = "form-control" })

                @Html.LabelFor(m => m.Utilisateur.Adresse,
                    new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Utilisateur.Adresse,
                    new { @class = "form-control" })

                @Html.LabelFor(m => m.Utilisateur.Mail,
                new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Utilisateur.Mail,
                    new { @class = "form-control" })

                @Html.LabelFor(m => m.Utilisateur.MotDePasse,
                    new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Utilisateur.MotDePasse,
                    new { @class = "form-control" })

               

            </div>


            <div class="row col-5 m-5" style="float:right">

                <p></p>

                <label for="inputMessage" class="form-label">Présentez-vous en quelques lignes</label>
                <textarea type="text"
                          class="form-control"
                          id="inputMessage"
                          placeholder="votre message"
                          rows="6">
                </textarea>


                <label for="formFile" class="form-label">Téléchargez votre CV</label>
                <input class="form-control" type="file" id="formFile">
                <label for="formFile" class="form-label">Téléchargez votre Lettre de motivation</label>
                <input class="form-control" type="file" id="formFile">


                <button type="submit" class="btn btn-primary">Envoyer</button>

            </div>


        </div>

    </form>
    <!--Script Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <content class="container-lg">
        <h1>Postuler</h1>
    </content>

    <form action="~/Professeur/Postuler" method="post" class="row g-3">

        <div style="float:right">
            <h2>Infos personnelles : </h2>

            Compte et contact :
            @Html.LabelFor(m=>m.Professeur.Utilisateur.Personne.Nom)
            <span>@Html.TextBoxFor(m=>m.Professeur.Utilisateur.Personne.Nom)</span>
            @Html.LabelFor(m=>m.Professeur.Utilisateur.Personne.Prenom)
            <span>@Html.TextBoxFor(m=>m.Professeur.Utilisateur.Personne.Prenom)</span>
            @Html.LabelFor(m=>m.Professeur.Utilisateur.Mail)
            <span>@Html.TextBoxFor(m=>m.Professeur.Utilisateur.Mail)</span>
            @Html.LabelFor(m=>m.Professeur.Utilisateur.MotDePasse)
            <span>@Html.PasswordFor(m=>m.Professeur.Utilisateur.MotDePasse)</span>
            @Html.LabelFor(m=>m.Professeur.Utilisateur.Adresse)
            <span>@Html.TextBoxFor(m=>m.Professeur.Utilisateur.Adresse)</span>
            @Html.LabelFor(m=>m.Professeur.Motivation)
        </div>

        <div>
            <input type="submit" value="Postuler" id="Postuler" onclick="recu()" />
        </div>
    </form>
    <script>function recu(){
        alert("Merci pour votre candidature.
         Nous nous engageons à vous faire un retour 
         au plus vite.")
    </script>
}


