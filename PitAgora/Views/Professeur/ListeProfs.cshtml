@model List<PitAgora.Models.Professeur>
@{
    Layout = "LayoutGen";
    ViewBag.Title = " Liste des professeurs";
}

@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Index", "Home")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Connexion", "Login")>
                Connexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Inscription", "Home")>
                Inscription
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Postuler", "Professeur")>
                Postuler
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("ListeProfs", "Professeur")>
                Profs
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#footer">
                Contact
            </a>
        </li>

    </ul>
}

@section Main{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <h2>Nos Professeurs</h2>
    <table>
        <tr>
            <th>Nom</th>
            <th>Matières enseignées</th>
            <th>Niveau</th>
        </tr>
        @foreach (var prof in @Model)
    {
        <tr>
            <td>@prof.Utilisateur.Personne.Prenom <strong>@prof.Utilisateur.Personne.Nom</strong></td>
            <td>@prof.</td>
        </tr>
    }
</table>
}


