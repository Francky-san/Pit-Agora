@model List<PitAgora.Models.Professeur>
@{
    Layout = "LayoutGen";
    ViewBag.Title = " Liste des professeurs";
}
@section css {
    <link href="~/css/stylesMain.css" rel="stylesheet" />
}
@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Index", "Home")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Connexion", "Login")>
                Connexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Inscription", "Home")>
                Inscription
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Postuler", "Professeur")>
                Postuler
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("ListeProfs", "Professeur")>
                Profs
            </a>
        </li>
      <li class="nav-item">
        <a class="nav-link" href=@Url.Action("Contact", "Home")>
            Contact
        </a>
    </li>

    </ul>
}

@section Main{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
        <section class="bienvenue position-absolute w-100 top-50 start-50 translate-middle">
        <h2>Nos Professeurs</h2>
    <table>
        <tr>
            <th>Nom</th>
            <th>Matières enseignées</th>
            <th>Niveau</th>
        </tr>
        @foreach (var prof in @Model)
    {
        <tr>
            <td>@prof.Utilisateur.Personne.Prenom <strong>@prof.Utilisateur.Personne.Nom</strong></td>
            <td>@prof.</td>
        </tr>
    }
</table>
    </section>


    <!--Script Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    
}


