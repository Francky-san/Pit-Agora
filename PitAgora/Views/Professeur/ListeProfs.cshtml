@section Main{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <section class="bienvenue position-absolute w-100 top-50 start-50 translate-middle">
        <h2>Nos Professeurs</h2>
        <div class="container" style="margin-block:25px; text-align:center;width:50%; float:left">
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prof in Model.profs)
                    {
                        <tr>
                            <td>
                                @prof.Utilisateur.Personne.Prenom <strong>@prof.Utilisateur.Personne.Nom</strong>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="margin-block:25px; text-align:center;width:50%; float:right">
            <table>
                <thead>
                    <tr>
                        <th>Matieres</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            Mathématiques
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Sciences de la vie et de la Terre
                        </td>
                    </tr>
                    <tr>
                        <td>
