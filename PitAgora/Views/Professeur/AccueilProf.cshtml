@model PitAgora.ViewModels.ProfViewModel
@{
    Layout = "LayoutPrive";

    ViewBag.Title = "Accueil Prof";
}
@section css {
    <link href="~/css/styles.css" rel="stylesheet" />
}

@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("AccueilProf", "Professeur")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Deconnexion", "Login")>
                Déconnexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("GérerPlanning", "Professeur")>
                Gérer mon planning
            </a>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("ElevesDuProf", "Professeur")>
                Mes élèves
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Contact", "Home")>
                Contact
            </a>
        </li>


    </ul>
}


@section Main{

  
            <div class="container" style="background-color:white;">

                <h3>Bonjour @Model.Professeur.Utilisateur.Personne.Prenom @Model.Professeur.Utilisateur.Personne.Nom</h3>

                <div class="row">

                    <div class="col-md-3">

                        <ul class="nav flex-column">
                            <li class="nav-link">@Html.ActionLink("Mon planning", "AfficherPlanning", "Professeur")</li>


                            <li class="nav-link">@Html.ActionLink("Mes élèves", "Professeur")</li>


                            <li class="nav-link">@Html.ActionLink("Mes ressources", "Professeur")</li>


                            <li class="nav-link">@Html.ActionLink("Mon profil", "Professeur")</li>


                        </ul>

                    </div>

                    <!--CENTRE SCENE-->

                    <div class="col-md-9">
                        <div class="row">
                            <h4> Mes prochains cours</h4>
                            @if (Model.CoursFuturs.Count > 0)
                            {
                                @foreach (var item in @Model.CoursFuturs)
                                {
                                    <div style="border:1px solid #333333;">
                                        <table>
                                            <tr><td>@item.Jour</td></tr>
                                            <tr><td>@item.Matiere avec </td></tr>
                                            <tr><td>@item.PrenomEleve</td></tr>
                                        </table>
                                    </div>
                                }
                            }
                            else
                            {
                                <h5>Pas de cours programmé pour le moment.</h5>
                            }


                            <h4 class="Prof"> Mes cours passés</h4>


                            @if (Model.CoursPasses.Count > 0)
                            {
                                @foreach (var item in @Model.CoursPasses)
                                {
                                    <div style="border:1px solid #333333;">
                                        <table>
                                            <tr><td>@item.Jour</td></tr>
                                            <tr><td>@item.Matiere</td></tr>
                                            <tr><td>@item.PrenomEleve</td></tr>
                                        </table>
                                    </div>
                                }
                            }
                            else
                            {
                                <h5>Vous n'avez pas encore donné de cours avec l'un de nos chers élèves !</h5>
                            }
                            <div>
                                <h4 class="titulos">Cours à évaluer</h4>
                            </div>
                        </div>

                        <div>
                            <h4> Récapitulatif rémunération à venir </h4>
                            En fin de semaine, vous percevrez : @Model.Professeur.CreditProf <span> € </span>
                        </div>




                    </div>

                    <!--CALENDRIER-->

                </div>

            </div>



}


















