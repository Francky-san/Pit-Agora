@model PitAgora.ViewModels.InscriptionViewModel

@{
    Layout = "LayoutGen";
}

@section css {
    <link href="~/css/stylesMain.css" rel="stylesheet" />
}

@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Index", "Home")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Connexion", "Login")>
                Connexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("Inscription", "Home")>
                Inscription
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Postuler", "Professeur")>
                Postuler
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("ListeProfs", "Professeur")>
                Nos Profs
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Contact", "Home")>
                Contact
            </a>
        </li>

    </ul>
}
@section Main{

    <form action="~/Home/Inscription" method="post">
        <div class="container-fluid">

            <div class="row col-5 m-5" style="float:left">
                <p>Infos Parent</p>
                @Html.LabelFor(m => m.Parent.Utilisateur.Personne.Prenom,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Parent.Utilisateur.Personne.Prenom,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Parent.Utilisateur.Personne.Nom,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Parent.Utilisateur.Personne.Nom,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Parent.Utilisateur.Adresse,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Parent.Utilisateur.Adresse,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Parent.Utilisateur.Mail,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Parent.Utilisateur.Mail,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Parent.Utilisateur.MotDePasse,
            new { @class = "form-label", label="Mot de passe"})
                @Html.PasswordFor(m => m.Parent.Utilisateur.MotDePasse,
            new { @class = "form-control" })


                <label for="formFile" class="form-label">Téléchargez votre pièce d'identité</label>
                <input class="form-control" type="file" id="formFile">


            </div>



            <div class="row col-5 m-5" style="float:right">

                <p>Infos Elève</p>

                @Html.LabelFor(m => m.Eleve.Utilisateur.Personne.Prenom,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Eleve.Utilisateur.Personne.Prenom,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Eleve.Utilisateur.Personne.Nom,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Eleve.Utilisateur.Personne.Nom,
            new { @class = "form-control" })


                @Html.LabelFor(m => m.Eleve.Utilisateur.Adresse,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Eleve.Utilisateur.Adresse,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Eleve.Utilisateur.Mail,
            new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Eleve.Utilisateur.Mail,
            new { @class = "form-control" })

                @Html.LabelFor(m => m.Eleve.Utilisateur.MotDePasse,
            new { @class = "form-label", text = "Mot de passe" })
                @Html.PasswordFor(m => m.Eleve.Utilisateur.MotDePasse,
            new { @class = "form-control" })

                <div class="row" style="margin-top:5px">
                    <span>
                        <label for="checkbox" class="form-check form-check-inline">Je souhaite inscrire un autre élève</label>
                        <input type="checkbox" class="form-check-input" />
                    </span>
                </div>

                <div class="row col-4 m-5">
                    <button type="submit" class="btn btn-primary" href=@Url.Action("PayerInscription", "Home")>Valider et payer</button>
                </div>


            </div>


        </div>

    </form>
    <!--Script Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
}

