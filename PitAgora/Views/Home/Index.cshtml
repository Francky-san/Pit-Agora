@section Main{
    <section class="bienvenue position-absolute w-100 top-50 start-50 translate-middle">
        <div class="container">
            <div class="row justify-content-center">
                <span class="col-12 col-md-10 col-lg-9 text-center text-white">
                    <h1 class="display-3 fw-bold mb-0">
                        Affirme tes forces
                        Construisons ton avenir
                    </h1>
                    <p class="fs-5 my-4">
                        Pit'Agora, N°1 en soutien scolaire dans les matières scientifiques

                    </p>
                    <div class="d-grid gap-2 d-sm-block">
                        <a href="https://localhost:5001/Home/Inscription" class="btn btn-primary me-sm-5">Inscription</a>
                        <a href="https://localhost:5001/Login/Connexion" class="btn btn-outline-light">Connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

}

<!--DEBUT AIDE -->

@section Aide{
    <section class="teAyudamos py-5 text-white text-center fondoCover">
        <div class="container py-lg-4">

            <header class=" mb-5">
                <h1 class="display-5 fw-bold tituloconLinea">
                    Profite du réseau Agora 
                    <br>
                    et gagne des "Pythos"
                </h1>

            </header>
            <div class="row justify-content-md-center">

                <div class="col-12 col-md-8 col-xl-7 col-xxl-6 mb-4">
                    <p class="lead">
                        Prêt à démarrer ton projet, mais quelques doutes subsistent ?
                        Laisse-nous ton e-mail.
                        <br>
                        Un membre de notre équipe pédagogique te contactera
                        dans les plus brefs délais.
                    </p>

                </div>
                <div class="col-12 col-md-8 col-xl-7">
                    <form action="#" class="formTeAyudamos">

                        <div class="input-group mb-3">

                            <input type="email" name="miEmail" id="miEmail" class="form-control"
                                   placeholder="Tape ton e-mail..." aria-label="Ingrese su correo email..."
                                   aria-describedby="enviarSuscripcion">

                            <button class="btn btn-primary px-4 py-2 px-lg-5 py-lg-3" type="button"
                                    id="enviarSuscripcion">
                                <i class="bi bi-hand-thumbs-up-fill fs-1 d-lg-none"></i>
                                <span class="d-none d-lg-block">Envoyer</span>
                            </button>

                        </div>

                    </form>

                </div>
            </div>

        </div>



    </section>
    <!--FIN AIDE-->
}
