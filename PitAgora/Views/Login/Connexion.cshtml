@model PitAgora.ViewModels.UtilisateurViewModel

@{
    Layout = "LayoutGen";
}


@section navbar{
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link " href=@Url.Action("Index", "Home")>
                Accueil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href=@Url.Action("Connexion", "Login")>
                Connexion
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Inscription", "Home")>
                Inscription
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Postuler", "Professeur")>
                Postuler
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("ListeProfs", "Professeur")>
                Profs
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("Contact", "Home")>
                Contact
            </a>
        </li>

    </ul>
}


@section Main{
        <content class="bienvenue position-absolute w-100 top-50 start-50 translate-middle">
            <div class="col row justify-content-center">
                <div class="col-4 col-md-4 col-lg-4">
                <form action="~/Login/Connexion" method="post">

                @if (Model.Authentifie)
            {
                <h3>
                    Vous êtes déjà authentifié avec le login :
                    @Model.Utilisateur.Mail
                </h3>
                @Html.ActionLink("Deconnexion", "Deconnexion")
                <p> @Html.ActionLink("Accueil","Index","Home") </p>
            }
            else
            {
                
                    <p>Connexion</p>

                    @Html.LabelFor(m => m.Utilisateur.Mail,
                new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Utilisateur.Mail,
                new { @class = "form-control" })

                    @Html.LabelFor(m => m.Utilisateur.MotDePasse,
                new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Utilisateur.MotDePasse,
                new { @class = "form-control" })



                    <button type="submit" class="btn btn-primary">Valider</button>

}

                </form>
                        <!--Script Bootstrap-->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>
        </content>
        

       
       }

